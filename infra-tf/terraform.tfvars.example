# ============================================================================
# Coherent PMO Platform - Terraform Variables Example
# ============================================================================
# Copy this file to terraform.tfvars and update with your values
# cp terraform.tfvars.example terraform.tfvars
# ============================================================================

# ============================================================================
# General Configuration
# ============================================================================

aws_region   = "us-east-1"
environment  = "dev"
project_name = "coherent"

# ============================================================================
# Network Configuration
# ============================================================================

vpc_cidr           = "10.0.0.0/16"
app_subnet_cidr_1  = "10.0.1.0/24"
app_subnet_cidr_2  = "10.0.2.0/24"
data_subnet_cidr_1 = "10.0.11.0/24"
data_subnet_cidr_2 = "10.0.12.0/24"

# ============================================================================
# Security Configuration
# ============================================================================

# IMPORTANT: Restrict SSH access to your IP address in production!
# Example: ssh_allowed_cidr = ["1.2.3.4/32"]
ssh_allowed_cidr = ["0.0.0.0/0"]

# ============================================================================
# Database Configuration
# ============================================================================

db_name     = "coherent"
db_username = "coherent_admin"
db_password = "CHANGE_ME_IN_PRODUCTION_USE_STRONG_PASSWORD"

# Development: db.t3.micro (1 vCPU, 1 GB RAM) - Free tier eligible
# Production: db.t3.small (2 vCPU, 2 GB RAM) or larger
db_instance_class = "db.t3.micro"

db_engine_version           = "14.10"
db_allocated_storage        = 20
db_max_allocated_storage    = 100
db_backup_retention_period  = 7

# ============================================================================
# EC2 Instance Configuration
# ============================================================================

# Development: t3.medium (2 vCPU, 4 GB RAM)
# Production: t3.large (2 vCPU, 8 GB RAM) or larger
ec2_instance_type    = "t3.medium"
ec2_root_volume_size = 30

# SSH Public Key - Generate with: ssh-keygen -t rsa -b 4096 -f ~/.ssh/coherent-key
# Then paste the contents of ~/.ssh/coherent-key.pub here
ec2_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQC... your-email@example.com"
