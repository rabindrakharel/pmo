# ============================================================================
# PMO API Environment Variables
# ============================================================================
# Copy this file to .env and fill in the values.
#
# SECRETS vs CONFIG:
# - This file contains SECRETS (API keys, passwords, tokens)
# - Non-secret config (ports, hosts, model names) is in src/config/index.ts
# - In production, secrets should come from AWS Secrets Manager
# ============================================================================

# ============================================================================
# REQUIRED SECRETS
# ============================================================================

# Database (required)
DATABASE_URL=postgresql://app:app@localhost:5434/app
# Or individual components (used if DATABASE_URL is not set)
DB_USER=app
DB_PASSWORD=app

# JWT Secret (required) - Generate with: openssl rand -base64 64
JWT_SECRET=dev-secret-key-change-in-production

# ============================================================================
# OAUTH SECRETS (optional - for social login)
# ============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Microsoft OAuth
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ============================================================================
# AI/ML API KEYS (optional)
# ============================================================================

# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Deepgram (voice transcription) - https://console.deepgram.com/
DEEPGRAM_API_KEY=

# ElevenLabs (voice synthesis) - https://elevenlabs.io/
ELEVEN_LABS_API_KEY=

# ============================================================================
# INFRASTRUCTURE SECRETS (optional)
# ============================================================================

# Redis (only if password protected)
REDIS_PASSWORD=

# RabbitMQ
RABBITMQ_URL=amqp://admin:admin123@localhost:5672

# SMTP (only if authentication required)
SMTP_USER=
SMTP_PASS=

# S3/MinIO (only for local development - production uses IAM roles)
S3_ACCESS_KEY=minio
S3_SECRET_KEY=minio123

# ============================================================================
# PRODUCTION: AWS SECRETS MANAGER
# ============================================================================
# In production, set USE_SECRETS_MANAGER=true and secrets will be loaded from:
#   - cohuron/prod/database
#   - cohuron/prod/auth
#   - cohuron/prod/oauth
#   - cohuron/prod/api-keys
#   - cohuron/prod/redis
#   - cohuron/prod/rabbitmq

USE_SECRETS_MANAGER=false
AWS_SECRETS_PREFIX=cohuron/prod

# ============================================================================
# NON-SECRET CONFIGURATION
# ============================================================================
# These can be set here for convenience, but defaults are in src/config/index.ts

# Server
# HOST=0.0.0.0
# PORT=4000
# NODE_ENV=development

# CORS
# WEB_ORIGIN=http://localhost:5173
# API_ORIGIN=http://localhost:4000

# Database (non-secret parts)
# DB_HOST=localhost
# DB_PORT=5434
# DB_NAME=app

# Redis (non-secret parts)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# JWT (non-secret parts)
# JWT_EXPIRES_IN=24h

# AWS
# AWS_REGION=us-east-1
# AWS_PROFILE=default

# S3
# S3_ENDPOINT=http://localhost:9000
# S3_REGION=us-east-1
# S3_BUCKET=pmo-files
# S3_ATTACHMENTS_BUCKET=pmo-attachments

# SES (Email)
